<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:button="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box_rounded_blue"
    tools:context=".editpopup">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="110dp"
        android:background="@color/roomies_Blue"
        android:contentDescription="@string/exit"
        android:elevation="20dp"
        android:src="@drawable/exit_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Edit List"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:typeface="sans"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/edit_list"
        android:layout_width="260dp"
        android:layout_height="153dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/box_rounded_pink"
        android:drawableBottom="@drawable/add_circle_small"
        android:gravity="center"
        android:text="Toiletries: n stuff"
        android:drawableRight="@drawable/trash_icon"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/box_rounded_pink"
        android:backgroundTint="@color/roomies_Pink"
        android:text="ADD"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />


</LinearLayout>