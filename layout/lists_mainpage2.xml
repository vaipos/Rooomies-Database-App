<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ListsMainpage2">

    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lists"
        android:gravity="center"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:typeface="sans"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/official_list"
            android:layout_width="292dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/box_rounded_pink"
            android:drawablePadding="35dp"
            android:elevation="15dp"
            android:gravity="center"
            android:text="eggs"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:typeface="sans" />

        <ImageButton
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/official_list"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="10dp"
            android:elevation="15dp"
            android:background="@color/roomies_Pink"
            android:src="@drawable/remove_icon" />

        <TextView
            android:id="@+id/personal_list"
            android:layout_width="292dp"
            android:layout_height="50dp"
            android:layout_below="@id/official_list"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/box_rounded_pink"
            android:drawablePadding="5dp"
            android:elevation="15dp"
            android:gravity="center"
            android:text="Vitamins"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:typeface="sans" />

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/personal_list"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="6dp"
            android:background="@color/roomies_Pink"
            android:elevation="15dp"
            android:src="@drawable/remove_icon" />

        <TextView
            android:id="@+id/new_textbox"
            android:layout_width="292dp"
            android:layout_height="50dp"
            android:layout_below="@id/personal_list"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/box_rounded_pink"
            android:drawablePadding="5dp"
            android:elevation="15dp"
            android:gravity="center"
            android:text="Milk"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:typeface="sans" />

        <ImageButton
            android:id="@+id/edit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/new_textbox"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="10dp"
            android:elevation="15dp"
            android:background="@color/roomies_Pink"
            android:src="@drawable/remove_icon" />
        <TextView
            android:id="@+id/new_box"
            android:layout_width="292dp"
            android:layout_height="50dp"
            android:layout_below="@id/personal_list"
            android:layout_marginStart="50dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/box_rounded_pink"
            android:drawablePadding="5dp"
            android:elevation="15dp"
            android:gravity="center"
            android:text="Lotion"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:typeface="sans" />

        <ImageButton
            android:id="@+id/edit5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/new_textbox"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="80dp"
            android:elevation="15dp"
            android:background="@color/roomies_Pink"
            android:src="@drawable/remove_icon" />




        <ImageButton
            android:id="@+id/createListButton"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="400dp"
            android:background="@color/white"
            android:contentDescription="@string/add"
            android:src="@drawable/add_circle" />

        <!-- Navigation bar at the bottom of the screen -->

    </RelativeLayout>


    <!-- Navigation bar at the bottom of the screen -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginTop="150dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/roomies_Blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/roomies_Blue">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:id="@+id/homeMove"
                android:background="@color/roomies_Blue"
                android:contentDescription="@string/home"
                android:elevation="20dp"
                android:src="@drawable/icons_house"
                />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:id="@+id/accountMove"

                android:background="@color/roomies_Blue"
                android:contentDescription="@string/calendar"
                android:elevation="20dp"
                android:src="@drawable/account_icon" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="69dp"
                android:id="@+id/listMpve"

                android:layout_weight="1"
                android:background="@color/roomies_Blue"
                android:contentDescription="@string/lists"
                android:elevation="20dp"
                android:src="@drawable/icons_lists" />


            <ImageButton
                android:layout_width="0dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:id="@+id/choreMove"
                android:background="@color/roomies_Blue"
                android:contentDescription="@string/chores"
                android:elevation="20dp"
                android:src="@drawable/icons_chores" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>

